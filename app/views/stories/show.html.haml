- model_class = Story
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @story.title
%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @story.content
%p
  %strong= model_class.human_attribute_name(:positive) + ':'
  %br
  = @story.positive
%p
  %strong= model_class.human_attribute_name(:negative) + ':'
  %br
  = @story.negative


= link_to t('.back', :default => t("helpers.links.back")), stories_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_story_path(@story), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), story_path(@story), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
